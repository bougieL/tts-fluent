{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "ES2022",
    "lib": ["dom", "es2021"],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react-jsx",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "baseUrl": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "release/app/dist",
    "skipLibCheck": true,
    "noEmit": true
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    "node_modules"
  ],
  "paths": {
    "*": ["./src/*"],
    "@assets/*": ["./assets/*"]
  }
}
